<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="22dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="#ffffff"
                android:fontFamily="@font/jung160"
                android:text="이용상품"
                android:textColor="#000000"
                android:textSize="19dp" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:fontFamily="@font/jung120"
                    android:text="1:1 PT"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button"
                    android:text="6"
                    android:textColor="@drawable/clickabletext" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:fontFamily="@font/jung120"
                    android:text="그룹 PT"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button"
                    android:text="4"
                    android:textColor="@drawable/clickabletext" />

            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/jung140"
                android:gravity="center"
                android:text="경기도 부천시 원미구 심곡동"
                android:textSize="20sp" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/daycircle"
                    android:gravity="center"
                    android:text="월"
                    android:textColor="#bababa"
                    android:textSize="15sp"
                    android:layout_margin="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/daycircle"
                    android:gravity="center"
                    android:text="화"
                    android:textColor="#bababa"
                    android:textSize="15sp"
                    android:layout_margin="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/daycircle"
                    android:gravity="center"
                    android:text="수"
                    android:textColor="#bababa"
                    android:textSize="15sp"
                    android:layout_margin="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/daycircle"
                    android:gravity="center"
                    android:text="목"
                    android:textColor="#fa2065"
                    android:textSize="15sp"
                    android:layout_margin="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/daycircle"
                    android:gravity="center"
                    android:text="금"
                    android:textColor="#fa2065"
                    android:textSize="15sp"
                    android:layout_margin="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/daycircle2"
                    android:gravity="center"
                    android:text="토"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_margin="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/daycircle"
                    android:gravity="center"
                    android:text="일"
                    android:textColor="#fa2065"
                    android:textSize="15sp"
                    android:layout_margin="7dp"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/daytime"
                    android:gravity="center"
                    android:text="10 : 00"
                    android:textColor="#bababa"
                    android:textSize="13sp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/daytime"
                    android:gravity="center"
                    android:text="12 : 00"
                    android:textColor="#bababa"
                    android:textSize="13sp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/daytime"
                    android:gravity="center"
                    android:text="14 : 00"
                    android:textColor="#fa2065"
                    android:textSize="13sp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/daytime2"
                    android:gravity="center"
                    android:text="16 : 00"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/daytime"
                    android:gravity="center"
                    android:text="18 : 00"
                    android:textColor="#fa2065"
                    android:textSize="13sp"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#ffffff"
                android:fontFamily="@font/jung160"
                android:text="추천 멤버십"
                android:textColor="#000000"
                android:textSize="19dp" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/membership_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal" />

    </LinearLayout>

</RelativeLayout>